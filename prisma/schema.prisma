generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Todo {
  id        String    @id @default(cuid())
  userId    String
  title     String
  note      String?
  priority  String
  tags      String[]
  icon      String
  dueDate   DateTime?
  createdAt DateTime
  updatedAt DateTime
}
